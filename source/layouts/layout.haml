<!doctype html>
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }
    %title= current_page.data.title || "Front end web development by Mark Brown. HTML, CSS &amp; Javascript"
    %meta{ name: "description", content: current_page.data.description || "Front end web development by Mark Brown. HTML, CSS &amp; Javascript" }
    %link{ href: "/journal/feed.xml", type: "application/atom+xml", rel: "alternate", title: "Journal feed" }
    = favicon_tag 'favicon.ico'
    = stylesheet_link_tag "application"
  %body{ class: page_classes }
    #wrap
      = link_to image_tag('boot.png', id: 'boot'), '/'
      %h1 Mark Brown
      = partial 'nav'
      #main
        = yield
    = javascript_include_tag  "application"
    = yield_content :js
